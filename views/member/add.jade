                        label.col-sm-2.control-label(for='password') 密码
                        div.col-sm-6
                            input.form-control(id='password' name='password' type='text' placeholder='密码')
                    div.form-group
                        label.col-sm-2.control-label(for='role') 角色
                        div.col-sm-6
                            input.form-control(id='role' name='role' type='text' placeholder='角色')


