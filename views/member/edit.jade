    //AJAX调用编辑接口
script(type='text/javascript').
    $("#submitBtn").click(function () {

        var password = $("#password").val();
        var rePassword = $("#rePassword").val();
        if (!password) {
            return alert("请填写密码")
        }
        if (!rePassword) {
            return alert("请填写确认密码")
        }
        if (password != rePassword) {
            return alert("密码和确认密码不一致")
        }
        var users = new Object();
        var usersId = $("#id").val();
        users.id = usersId;
        users.username = $("#username").val();
        users.password = password;
        users.role = $("#role").val();
        $.ajax({
            method: "POST",
            url: '/member/edit/' + usersId,
            data: users,
            dataType: "json",
            success: function (data) {
                if(data.success == true){
                    Tip.alert("edit","member");
                }else{
                    alert("编辑人员失败请联系开发人员")
                }
            },
            error: function (data) {
                alert("编辑人员失败请联系开发人员")
            }
        });
    });