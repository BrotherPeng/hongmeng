include ../includes/head

block content
    include ../includes/header
.container-fluid
    .row
        include ../includes/slide
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
            h1.page-header 编辑设备
            .row.placeholders
                if(result)
                    //form.form-horizontal(role='form' action='/equipment/edit/#{result[0].id}' method='post')
                    form.form-horizontal(role='form')
                        div.form-group
                            label.col-sm-5.control-label(for='name') 设备名称
                            div.col-sm-3
                                input.form-control(id='name' name='name' type='text' placeholder='设备名称' required value='#{result[0].name}')
                                input(style='display:none').form-control(id='id' name='id' type='text' placeholder='设备名称' required value='#{result[0].id}')
                        div.form-group
                            label.col-sm-5.control-label(for='equip_id') 设备ID
                            div.col-sm-3
                                input.form-control(id='equip_id' name='equip_id' type='text' placeholder='设备ID' required value='#{result[0].equip_id}')
                        div.form-group
                            label.col-sm-5.control-label(for='key') 设备key
                            div.col-sm-3
                                input.form-control(id='key' name='key' type='text' placeholder='设备ID' required value='#{result[0].key}')
                        div.form-group
                            label.col-sm-5.control-label(for='project_id') 所属项目
                            div.col-sm-3
                                input.form-control(id='project_id' name='project_id' type='text' placeholder='所属项目' required value='#{result[0].project_id}')
                        div.form-group
                            label.col-sm-4.control-label
                            div.col-sm-2
                                button.sub_btn.sub_left_btn#submitBtn(type='button') 提交
                            div.col-sm-2
                                a(href='/equipment/list')
                                    button.sub_btn.sun_right_btn(type='button') 取消
include ../includes/footer
    //AJAX调用编辑接口
script(type='text/javascript').
    $("#submitBtn").click(function () {
        var id = $("#id").val();
        var equipment = new Object();
        equipment.id = id;
        equipment.project_id = $("#project_id").val();
        equipment.name = $("#name").val();
        equipment.equip_id = $("#equip_id").val();
        console.log(equipment);
        $.ajax({
            method: "POST",
            url: '/equipment/edit/' + id,
            data: equipment,
            dataType: "json",
            success: function (data) {
                console.log(data);
                Tip.alert("equipment");
            },
            error: function (data) {
                console.log(data);
                alert("编辑设备失败请联系开发人员")
            }
        });

        var Tip = {
            alert: function (type) {
                var t = "";
                if (type == 'project') {
                    t = "项目"
                } else if (type == 'equipment') {
                    t = "设备"
                } else if (type == 'member') {
                    t = "人员"
                }
                var tip = "";
                tip =
                        '<div class="tipBox">' +
                        '<div style="margin-top: 80px">' + '修改' + t + '成功' + '</div>' +
                        '<button id="tip_btn" class="tip_btn">' + '确定' + '</button>' +
                        '</div>';
                $("body").append(tip);
                $("#tip_btn").click(function () {
                    location.href = "/" + type + "/list";
                });
            }
        };
    });