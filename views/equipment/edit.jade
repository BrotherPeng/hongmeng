include ../includes/head

block content
    include ../includes/header
.container-fluid
    .row
        include ../includes/slide
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
            h1.page-header 编辑设备
            .row.placeholders
                if(result)
                    form.form-horizontal(role='form' action='/equipment/edit/#{result[0].id}' method='post')
                        div.form-group
                            label.col-sm-2.control-label(for='name') 设备名称
                            div.col-sm-10
                                input.form-control(id='name' name='name' type='text' placeholder='设备名称' required value='#{result[0].name}')
                        div.form-group
                            label.col-sm-2.control-label(for='equip_id') 设备ID
                            div.col-sm-10
                                input.form-control(id='equip_id' name='equip_id' type='text' placeholder='设备ID' required value='#{result[0].equip_id}')
                        div.form-group
                            label.col-sm-2.control-label(for='key') 设备key
                            div.col-sm-10
                                input.form-control(id='key' name='key' type='text' placeholder='设备ID' required value='#{result[0].key}')
                        div.form-group
                            label.col-sm-2.control-label(for='project_id') 所属项目
                            div.col-sm-10
                                input.form-control(id='project_id' name='project_id' type='text' placeholder='所属项目' required value='#{result[0].project_id}')
                        button.btn.btn-primary.btn-lg#submitBtn(type='submit') 提交
include ../includes/footer